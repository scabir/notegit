{
  "name": "notegit",
  "version": "2.1.1",
  "packageManager": "pnpm@10.28.0",
  "description": "A Git-backed Markdown note-taking desktop application",
  "main": "dist/electron/electron/main.js",
  "author": {
    "name": "Suleyman Cabir Ataman",
    "email": "suleymanc@protonmail.com"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:electron\"",
    "dev:frontend": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:frontend && pnpm run build:backend && pnpm run build:electron && pnpm run fix-imports",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "fix-imports": "node fix-electron-imports.js",
    "start": "electron .",
    "package": "pnpm run build && electron-builder",
    "clean": "rimraf dist",
    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watch",
    "test:coverage": "./node_modules/.bin/jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "notes",
    "markdown",
    "git",
    "electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "@jest/test-sequencer": "^30.2.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-tree-view": "^6.17.0",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@uiw/codemirror-theme-github": "^4.25.3",
    "@uiw/react-codemirror": "^4.21.21",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "dompurify": "^3.0.6",
    "mermaid": "^11.12.2",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-deflist": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.21.0",
    "unist-util-visit": "^5.0.0",
    "winston": "^3.11.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.notegit.app",
    "productName": "notegit",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/electron/resources/notegit.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/electron/resources/notegit.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "icon": "src/electron/resources/notegit.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
